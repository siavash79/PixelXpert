<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="PrefsThemeToolbar" parent="PreferenceThemeOverlay.v14.Material">
		<item name="android:layout">@layout/fragment_preference_container</item>
	</style>

	<style name="PrefsThemeCollapsingToolbar" parent="PreferenceThemeOverlay.v14.Material">
		<item name="android:layout">@layout/fragment_preference_container_home</item>
	</style>

	<style name="Toolbar.TitleText" parent="TextAppearance.Material3.TitleLarge" />

	<style name="Toolbar.SubTitleText" parent="TextAppearance.Material3.TitleSmall" />

	<style name="Toolbar.TitleText.Collapsed">
		<item name="android:textSize">22sp</item>
		<item name="fontFamily">sans-serif</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Material3.TitleLarge">
		<item name="android:textSize">40sp</item>
	</style>

	<style name="Toolbar.SubTitleText.Collapsed">
		<item name="android:textSize">13sp</item>
		<item name="fontFamily">sans-serif</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<style name="Toolbar.SubTitleText.Expanded" parent="TextAppearance.Material3.BodyMedium" />

	<style name="TextAppearance.App.ListItem.Title" parent="TextAppearance.AppCompat.Subhead">
		<item name="android:textSize">19sp</item> <!-- A12 B2: 20sp -->
	</style>

	<style name="Material3.SeekBar" parent="Widget.AppCompat.SeekBar">
		<item name="android:progressBackgroundTint">@color/color_accent_0_80_overlay</item>
		<item name="android:progressTint">?attr/colorPrimary</item>
		<item name="android:thumbTint">@null</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@null</item>
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:splitTrack">false</item>
		<item name="android:thumb">@drawable/seek_thumb</item>
		<item name="android:track">@drawable/seek_track</item>
	</style>

	<style name="Widget.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
		<item name="shapeAppearanceOverlay">@style/ShapeAppearanceExtFAB</item>
	</style>

	<style name="ShapeAppearanceExtFAB">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">@dimen/ui_container_radius</item>
	</style>

	<style name="MaterialComponents.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
		<item name="android:background">?attr/colorSurfaceContainer</item>
		<item name="android:dialogCornerRadius">@dimen/ui_container_radius</item>
		<item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title.Text
		</item>
		<item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Body.Text
		</item>
		<item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Button.Text
		</item>
		<item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Button.Text
		</item>
		<item name="android:backgroundDimAmount">0.6</item>
	</style>

	<style name="MaterialAlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
		<item name="android:background">?attr/colorSurfaceContainer</item>
		<item name="android:textSize">20sp</item>
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

	<style name="MaterialAlertDialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
		<item name="android:background">?attr/colorSurfaceContainer</item>
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<style name="MaterialAlertDialog.Button.Text" parent="Widget.Material3.Button.TextButton.Dialog">
		<item name="android:backgroundTint">?attr/colorSurfaceContainer</item>
		<item name="android:foreground">?attr/selectableItemBackground</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

	<style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
		<item name="android:popupBackground">?attr/colorSurfaceContainerHighest</item>
	</style>

</resources>